\documentclass[$if(fontsize)$$fontsize$$else$11pt$endif$,a4paper]{article}

% Packages for XeTeX and font support
\usepackage{fontspec}

% Set main fonts
$if(mainfont)$
\setmainfont{$mainfont$}
$else$
\setmainfont{Hiragino Mincho ProN}
$endif$
$if(sansfont)$
\setsansfont{$sansfont$}
$else$
\setsansfont{Hiragino Sans}
$endif$
$if(monofont)$
\setmonofont{$monofont$}
$else$
\setmonofont{Menlo}
$endif$

% CJK font
$if(cjk-mainfont)$
\newfontfamily\cjkmainfont{$cjk-mainfont$}
$else$
\newfontfamily\cjkmainfont{Hiragino Mincho ProN}
$endif$

% Japanese line breaking support
\XeTeXlinebreaklocale "ja"
\XeTeXlinebreakskip=0pt plus 1pt
\XeTeXlinebreakpenalty=0
\emergencystretch=3em
\tolerance=1000

% Page geometry (customizable via margin YAML parameter)
\usepackage[$if(geometry)$$for(geometry)$$geometry$$sep$,$endfor$$elseif(margin)$margin=$margin$$else$margin=3cm$endif$]{geometry}

% Math support
\usepackage{amsmath}
\usepackage{amssymb}

% Line spacing (customizable)
$if(line-spacing)$
\usepackage{setspace}
\setstretch{$line-spacing$}
$elseif(doublespacing)$
\usepackage{setspace}
\doublespacing
$endif$

% Numbered sections
\setcounter{secnumdepth}{3}

% Colors (customizable via primary-color YAML parameter)
\usepackage{xcolor}
$if(primary-color)$
\definecolor{primarycolor}{RGB}{$primary-color$}
$else$
\definecolor{primarycolor}{RGB}{0,0,128}
$endif$

% Header and footer
\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
$if(header-left)$
\fancyhead[L]{\small $header-left$}
$else$
\fancyhead[L]{\small\leftmark}
$endif$
\fancyhead[R]{\small\thepage}
\fancyfoot[C]{}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

\fancypagestyle{plain}{%
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
}

% Table support
\usepackage{longtable}
\usepackage{booktabs}
\usepackage{array}
\usepackage{tabularx}
\usepackage{calc}

% Prevent table/text overflow
\setlength{\LTpre}{1em}
\setlength{\LTpost}{1em}

% Code block support
\usepackage{listings}
\lstset{
  basicstyle=\ttfamily\small,
  backgroundcolor=\color{gray!10},
  breaklines=true,
  frame=single,
  framesep=3pt,
  numbers=left,
  numberstyle=\tiny,
  rulecolor=\color{gray!30}
}

% Figure and image support with numbering
\usepackage{graphicx}
\usepackage{float}
\usepackage{caption}

% Layout packages (for layout.lua filter)
\usepackage{multicol}
\usepackage{pdflscape}
\usepackage{wrapfig}

% Footnote support
\usepackage[bottom]{footmisc}

% Hyperref for links
\usepackage{hyperref}
\hypersetup{
  colorlinks=true,
  linkcolor=primarycolor,
  urlcolor=primarycolor,
  citecolor=primarycolor,
  bookmarksnumbered=true,
  pdfencoding=auto
}

