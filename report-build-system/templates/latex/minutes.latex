% Compact heading styles
\usepackage{titlesec}

\titleformat{\section}
  {\sffamily\normalsize\bfseries\color{headerblue}}
  {}{0em}{}
  [\vspace{-0.3em}{\color{bordergray}\rule{\textwidth}{0.5pt}}]

\titleformat{\subsection}
  {\sffamily\normalsize\bfseries\color{primarycolor}}
  {}{0em}{}

\titleformat{\subsubsection}
  {\sffamily\small\bfseries\color{primarycolor}}
  {}{0em}{}

